<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ERM_HSYT" xmlns:grial="clr-namespace:UXDivers.Grial;assembly=UXDivers.Grial"
	x:Class="ERM_HSYT.ContactDetailItemTemplate">
    
    <ContentView.Content>
        <Grid
			VerticalOptions="Center"
			Padding="16,10"> 
            <!-- LABEL -->
            <Label
				Grid.Column="0"
				FontSize="18"
				Text="{ Binding Label }" />
            
            <!-- VALUE -->
            <Label
				Grid.Column="1"
				FontSize="18"
				Style="{ StaticResource LabelBoldStyle }"
				Text="{ Binding Value }" />
        </Grid>
    </ContentView.Content>
    
</ContentView>
